{
  "name": "sahara-tourism-monorepo",
  "version": "1.0.0",
  "description": "Sahara Tourism System - Monorepo containing Partner, Admin, and Camping applications",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:partner": "ng serve partner-app",
    "start:admin": "ng serve admin-app",
    "start:camping": "ng serve camping-app",
    "build": "ng build",
    "build:partner": "ng build partner-app",
    "build:admin": "ng build admin-app",
    "build:camping": "ng build camping-app",
    "build:shared": "ng build shared",
    "build:all": "npm run build:shared && npm run build:partner && npm run build:admin && npm run build:camping",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.17",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.19",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "chart.js": "^4.5.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.7",
    "jwt-decode": "^4.0.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.9",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "@types/jspdf": "^1.3.3",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.0",
    "typescript": "~5.7.2"
  }
